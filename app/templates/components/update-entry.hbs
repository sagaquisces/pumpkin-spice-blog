
  <h4>Update {{entry.author}}'s Blog Post</h4>
  <div>
    <form id="updatentryForm">
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=entry.author id=(concat 'author-' entry.id) placeholder=entry.author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=entry.title id=(concat 'title-' entry.id) placeholder=entry.title}}
      </div>

      <div class="form-group">
        <label for="content">Update The Blog Content Here:</label>
        {{textarea value=entry.content id=(concat 'content' entry.id) placeholder=entry.content}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=entry.image id=(concat 'image' entry.id) placeholder=entry.image}}
      </div>
    </form>
  </div>
